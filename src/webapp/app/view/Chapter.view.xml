<mvc:View
  xmlns:mvc="sap.ui.core.mvc"
  xmlns="sap.m"
  xmlns:core="sap.ui.core"
  xmlns:tnt="sap.tnt"
  xmlns:l="sap.ui.layout"
  xmlns:control="SashasProject.control"
  controllerName="SashasProject.controller.Chapter" width="100%" height="100%"
  displayBlock="true">

  <tnt:ToolPage id="class" class="pageStandard">
    <tnt:header>
      <tnt:ToolHeader class="customHeader">
        <Button id="menuButton" icon="sap-icon://menu2" type="Transparent" press="onMenuButtonPress"/>
        <ToolbarSpacer />
        <Text text="{Model>/chapterVar} раздел" class="customHeaderText" />
      </tnt:ToolHeader>
    </tnt:header>

    <tnt:sideContent>
      <tnt:SideNavigation id="sideNavigation" >
        <tnt:NavigationList items="{path: 'Model>/navigation'}" itemSelect="sideNavIsSelected">
          <tnt:NavigationListItem text="{path: 'Model>navigationListItem'}" items="{path: 'Model>navigationListSubItems'}" icon="{path: 'Model>icon'}" expanded="false">
            <tnt:NavigationListItem text="{path: 'Model>title'} раздел" enabled="true"/>
          </tnt:NavigationListItem>
        </tnt:NavigationList>
      </tnt:SideNavigation>
    </tnt:sideContent>

    <tnt:mainContents>
      <Carousel  id="chapterCarousel" loop="false" pageChanged = "handleNextPage" pages="{path:'Model>/formulas'}">                                    
        <control:FlipCard frontText="{Model>name}" backText="{Model>formula}" >
        </control:FlipCard>
      </Carousel>

    </tnt:mainContents>
  </tnt:ToolPage>

</mvc:View>
